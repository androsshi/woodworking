<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- === Planks === -->
  <RecipeDef>
    <defName>Make_WoodPlanks</defName>
    <label>make wood planks</label>
    <description>Process wood logs into planks for construction.</description>
    <jobString>Making wood planks from wood logs.</jobString>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>400</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.25</workSkillLearnFactor>
    <targetCountAdjustment>20</targetCountAdjustment>
    <allowMixingIngredients>false</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawLog</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <WoodLog>30</WoodLog>
    </products>
    <recipeUsers>
      <li>WW_TableWoodworking</li>
      <li>CraftingSpot</li>
    </recipeUsers>
  </RecipeDef>

