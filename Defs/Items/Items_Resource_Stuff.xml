<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- === StuffCategoryDefs / ThingCategoryDefs === -->
  <StuffCategoryDef>
    <defName>RawWoody</defName>
    <label>raw woody</label>
    <destroySoundSmall>BuildingDestroyed_Wood_Small</destroySoundSmall>
    <destroySoundMedium>BuildingDestroyed_Wood_Medium</destroySoundMedium>
    <destroySoundLarge>BuildingDestroyed_Wood_Big</destroySoundLarge>
  </StuffCategoryDef>

  <ThingCategoryDef>
    <defName>WoodPlanks</defName>
    <label>wood planks</label>
    <parent>ResourcesRaw</parent>
    <iconPath>Things/Resource/BasicPlanks</iconPath>
    <resourceReadoutRoot>true</resourceReadoutRoot>
  </ThingCategoryDef>

  <!-- === Raw Wood Log === -->
  <ThingDef ParentName="ResourceVerbBase">
    <defName>RawLog</defName>
    <label>wood log</label>
    <description>Wood from trees or other fibrous plants. Useful for building structures and weapons. It is a good fuel for campfires and generators, and can be refined into chemfuel. In a pinch, a piece of wood can be used as a weapon or a leg.</description>
    <graphicData>
      <texPath>Things/Item/Resource/WoodLog</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.4</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
      <StuffPower_Armor_Sharp>0.24</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.24</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.25</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>4</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>2</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.20</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.3</BluntDamageMultiplier>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>false</healthAffectsPrice>
    <minRewardCount>10</minRewardCount>
    <stuffProps>
      <stuffAdjective>log</stuffAdjective>
      <categories>
        <li>RawWoody</li>
      </categories>
      <commonality>1.00</commonality>
      <color>(133,97,67)</color>
      <constructEffect>ConstructWood</constructEffect>
      <appearance>Planks</appearance>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.65</MaxHitPoints>
        <Flammability>1</Flammability>
        <WorkToMake>0.7</WorkToMake>
        <WorkToBuild>0.7</WorkToBuild>
        <DoorOpenSpeed>1.2</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
    <isTechHediff>true</isTechHediff>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <tools>
      <li>
        <label>log</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>

  <!-- === Planks === -->
  <ThingDef Name="WWPlankBase" ParentName="ResourceVerbBase">
    <defName>WoodLog</defName>
    <label>planks</label>
    <description>wood planks.</description>
    <graphicData>
      <texPath>Things/Resource/Planks</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(115, 74, 50)</color>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Wood_Drop</soundDrop>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.4</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
      <StuffPower_Armor_Sharp>0.54</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.54</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.40</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>8</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>4</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.40</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <burnableByRecipe>true</burnableByRecipe>
    <healthAffectsPrice>true</healthAffectsPrice>
    <minRewardCount>10</minRewardCount>
    <stuffProps>
      <stuffAdjective>wooden</stuffAdjective>
      <categories>
        <li>Woody</li>
      </categories>
      <commonality>1</commonality>
      <color>(115, 74, 50)</color>
      <constructEffect>ConstructWood</constructEffect>
      <appearance>Planks</appearance>
      <soundImpactStuff>BulletImpact_Wood</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Wood</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Wood</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.6</MaxHitPoints>
        <Flammability>1</Flammability>
        <WorkToMake>0.7</WorkToMake>
        <WorkToBuild>0.7</WorkToBuild>
        <DoorOpenSpeed>1.2</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
    <isTechHediff>true</isTechHediff>
    <thingCategories>
      <li>WoodPlanks</li>
    </thingCategories>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <tools>
      <li>
        <label>plank</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>

  <!-- === Treated Planks === -->
  <ThingDef ParentName="WWPlankBase">
    <defName>WW_TreatedPlanks</defName>
    <label>treated planks</label>
    <description>treated wood planks.</description>
    <graphicData>
      <color>(64, 42, 34)</color>
    </graphicData>
    <stuffProps>
      <stuffAdjective>treated wooden</stuffAdjective>
      <color>(64, 42, 34)</color>
      <statOffsets>
        <Beauty>3</Beauty>
      </statOffsets>
    </stuffProps>
  </ThingDef>

  <!-- === Sealed Planks === -->
  <ThingDef ParentName="WWPlankBase">
    <defName>WW_SealedPlanks</defName>
    <label>sealed planks</label>
    <description>sealed wood planks, unlike their counterparts sealed planks are stronger and flame resistant making them exceptionally good for construction.</description>
    <graphicData>
      <color>(217, 187, 147)</color>
      <!--<color>(252, 237, 196)</color>-->
    </graphicData>
    <stuffProps>
      <stuffAdjective>sealed wooden</stuffAdjective>
      <color>(217, 187, 147)</color>
      <statFactors>
        <MaxHitPoints>0.85</MaxHitPoints>
        <Flammability>0</Flammability>
      </statFactors>
    </stuffProps>
  </ThingDef>

</Defs>