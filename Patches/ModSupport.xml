<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- === Combat Extended === -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<!-- === statBases === -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RawLog"]/statBases</xpath>
					<value>
						<Bulk>0.07</Bulk>
						<MeleeCounterParryBonus>1.33</MeleeCounterParryBonus>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="RawLog"]/statBases/StuffPower_Armor_Sharp</xpath>
					<value>
						<StuffPower_Armor_Sharp>0.1</StuffPower_Armor_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="RawLog"]/statBases/StuffPower_Armor_Blunt</xpath>
					<value>
						<StuffPower_Armor_Blunt>0.2</StuffPower_Armor_Blunt>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="RawLog"]/statBases/StuffPower_Armor_Heat</xpath>
					<value>
						<StuffPower_Armor_Heat>0.025</StuffPower_Armor_Heat>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="RawLog"]/statBases/SharpDamageMultiplier</xpath>
					<value>
						<SharpDamageMultiplier>0.7</SharpDamageMultiplier>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="RawLog"]/statBases/BluntDamageMultiplier</xpath>
					<value>
						<BluntDamageMultiplier>0.5</BluntDamageMultiplier>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RawLog"]/stuffProps/statFactors</xpath>
					<value>
						<Mass>0.3</Mass>
						<MeleePenetrationFactor>0.3</MeleePenetrationFactor>
					</value>
				</li>

				<!-- === equippedStatOffsets === -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="RawLog"]</xpath>
					<value>
						<equippedStatOffsets>
							<MeleeCritChance>0.2</MeleeCritChance>
							<MeleeParryChance>1</MeleeParryChance>
							<MeleeDodgeChance>0.13</MeleeDodgeChance>
						</equippedStatOffsets>
					</value>
				</li>

				<!-- === Tools === -->
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="RawLog"]/tools</xpath>
					<value>
						<tools>
							<li Class="CombatExtended.ToolCE">
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>2</power>
							<cooldownTime>0.99</cooldownTime>
							<armorPenetrationBlunt>0.288</armorPenetrationBlunt>
						</li>
						</tools>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>